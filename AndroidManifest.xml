<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iia.touchwin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/red" >
        
        <!-- Splash screen -->
        <activity
            android:name="com.iia.touchwin.views.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- MainActivity -->
        <activity
            android:name="com.iia.touchwin.views.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- HomeActivity -->
        <activity
            android:name="com.iia.touchwin.views.HomeActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- PlayActivity -->
        <activity
            android:name="com.iia.touchwin.views.PlayActivity"
            android:label="@string/app_name"  
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- GameActivity -->
        <activity
            android:name="com.iia.touchwin.views.GameActivity"
            android:label="@string/app_name"  
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        </activity>
        
        <!-- CalculActivity -->
        <activity
            android:name="com.iia.touchwin.views.CalculActivity"
            android:label="@string/app_name"  
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        </activity>
        
        <!-- SettingsActivity -->
        <activity
            android:name="com.iia.touchwin.views.SettingsActivity"
            android:label="@string/app_name"  
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- HelpActivity -->
        <activity
            android:name="com.iia.touchwin.views.HelpActivity"
            android:label="@string/app_name"  
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- StatsActivity -->
        <activity
            android:name="com.iia.touchwin.views.StatsActivity"
            android:label="@string/app_name"  
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>