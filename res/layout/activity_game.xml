<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/btnP2"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:text="@string/btn_player2"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btnP1"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/btn_player1"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/lbScoreP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnP1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/lbMoreP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnP1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="+1"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold" 
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imgColor"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="25px"
        android:contentDescription="@string/img_color" />

    <TextView
        android:id="@+id/lbScoreP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnP2"
        android:layout_marginLeft="25dp"
        android:rotation="180"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/lbMoreP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnP2"
        android:layout_marginLeft="25dp"
        android:rotation="180"
        android:text="+1"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtChrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:rotation="90"
        android:textSize="100sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbCalculP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbScoreP1"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/lbCalculP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbCalculP1"
        android:layout_alignTop="@+id/lbScoreP2"
        android:layout_centerHorizontal="true"
        android:rotation="180"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/imgClickP2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_above="@+id/lbScoreP2"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:layout_toLeftOf="@+id/lbScoreP1"
        android:rotation="180" />

    <ImageView
        android:id="@+id/imgClickP1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/btnP1"
        android:layout_margin="30dp" />

</RelativeLayout>