            android:background="#ffffff"
            android:layout_marginTop="1dip"
            android:layout_marginLeft="1dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/c2l2"
